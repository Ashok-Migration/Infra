{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workflowName": {
      "value": "logic-cpp-apps-mpso365-pre-we-01"
    },
    "workflowLocation": {
      "value": "westeurope"
    },
    "workflowSchema": {
      "value": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#"
    },
    "workflowTriggers": {
      "value": {
        "When_a_resource_event_occurs": {
          "splitOn": "@triggerBody()",
          "type": "ApiConnectionWebhook",
          "inputs": {
            "body": {
              "properties": {
                "destination": {
                  "endpointType": "webhook",
                  "properties": {
                    "endpointUrl": "@{listCallbackUrl()}"
                  }
                },
                "filter": {
                  "includedEventTypes": [
                    "product-created",
                    "product-updated",
                    "product-deleted",
                    "kbarticle-created",
                    "kbarticle-updated",
                    "kbarticle-deleted",
                    "news-created",
                    "news-updated",
                    "news-deleted"
                  ]
                },
                "topic": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.EventGrid/domains/egd-cpp-apps-int-pre-we-01/topics/o365"
              }
            },
            "host": {
              "connection": {
                "name": "@parameters('$connections')['apicon-cpp-apps-integ-pre-we-01']['connectionId']"
              }
            },
            "path": "/subscriptions/@{encodeURIComponent('8964f3c1-44f5-4094-80eb-4334845bdfb1')}/providers/@{encodeURIComponent('Microsoft.EventGrid.Domains')}/resource/eventSubscriptions",
            "queries": {
              "subscriptionName": "logic-cpp-apps-mpso365-pre-we-01-sub",
              "x-ms-api-version": "2017-06-15-preview"
            }
          }
        }
      }
    },
    "workflowActions": {
      "value": {
        "Convert_Message_To_Object": {
          "runAfter": {},
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "EventMessage",
                "type": "object",
                "value": "@triggerBody()"
              }
            ]
          }
        },
        "logic-cpp-apps-mpsidx-pre-we-01": {
          "runAfter": {
            "Convert_Message_To_Object": [
              "Succeeded"
            ]
          },
          "type": "Workflow",
          "inputs": {
            "body": {
              "data": "@variables('EventMessage').data",
              "dataVersion": "@{variables('EventMessage').dataVersion}",
              "eventTime": "@triggerBody()?['eventTime']",
              "eventType": "@triggerBody()?['eventType']",
              "id": "@triggerBody()?['id']",
              "metadataVersion": "@{variables('EventMessage').metadataVersion}",
              "subject": "@triggerBody()?['subject']",
              "topic": "@triggerBody()?['topic']"
            },
            "host": {
              "triggerName": "manual",
              "workflow": {
                "id": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.Logic/workflows/logic-cpp-apps-mpsidx-pre-we-01"
              }
            }
          }
        }
      }
    },
    "workflowParameters": {
      "value": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        }
      }
    },
    "connectionParameters": {
      "value": {
        "$connections": {
          "value": {
            "apicon-cpp-apps-integ-pre-we-01": {
              "connectionId": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.Web/connections/apicon-cpp-apps-integ-pre-we-01",
              "connectionName": "apicon-cpp-apps-integ-pre-we-01",
              "id": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/providers/Microsoft.Web/locations/westeurope/managedApis/azureeventgrid"
            }
          }
        }
      }
    },
    "diagnosticLogsRetentionInDays": {
      "value": 365
    },
    "diagnosticStorageAccountId": {
      "value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.Storage/storageAccounts/stcppappsdiagprewe01"
    },
    "workspaceId": {
      "value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.OperationalInsights/workspaces/log-cpp-apps-mon-pre-we-01"
    },
    "eventHubAuthorizationRuleId": {
      "value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.EventHub/namespaces/evhns-cpp-apps-mon-pre-we-01/authorizationrules/RootManageSharedAccessKey"
    },
    "eventHubName": {
      "value": "evh-cpp-apps-mon-pre-we-01"
    },
    "tags": {
      "value": {
        "Environment": "Pre-Production"
      }
    }
  }
}
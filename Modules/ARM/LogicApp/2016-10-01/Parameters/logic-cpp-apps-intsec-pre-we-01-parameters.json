{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"workflowName": {
			"value": "logic-cpp-apps-intsec-pre-we-01"
		},
		"workflowLocation": {
			"value": "westeurope"
		},
		"workflowSchema": {
			"value": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#"
		},
		"workflowTriggers": {
			"value": {
				"When_a_resource_event_occurs": {
					"inputs": {
						"body": {
							"properties": {
								"destination": {
									"endpointType": "webhook",
									"properties": {
										"endpointUrl": "@{listCallbackUrl()}"
									}
								},
								"filter": {
									"includedEventTypes": [
										"sector-created",
										"sector-updated",
										"sector-deleted"
									]
								},
								"topic": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.EventGrid/domains/egd-cpp-apps-int-pre-we-01/topics/d365"
							}
						},
						"host": {
							"connection": {
								"name": "@parameters('$connections')['apicon-cpp-apps-integ-pre-we-01']['connectionId']"
							}
						},
						"path": "/subscriptions/@{encodeURIComponent('8964f3c1-44f5-4094-80eb-4334845bdfb1')}/providers/@{encodeURIComponent('Microsoft.EventGrid.Domains')}/resource/eventSubscriptions",
						"queries": {
							"subscriptionName": "logic-cpp-apps-intsec-pre-we-01-sub",
							"x-ms-api-version": "2017-09-15-preview"
						}
					},
					"splitOn": "@triggerBody()",
					"type": "ApiConnectionWebhook"
				}
			}
		},
		"workflowActions": {
			"value": {
				"Parse_Event_Grid_Data_JSON": {
					"inputs": {
						"content": "@triggerBody()?['data']",
						"schema": {
							"properties": {
								"Id": {
									"type": "string"
								},
								"LocalizedValues": {
									"properties": {
										"Ar": {
											"properties": {
												"id": {
													"type": "string"
												},
												"name": {
													"type": "string"
												}
											},
											"type": "object"
										}
									},
									"type": "object"
								},
								"Value": {
									"properties": {
										"id": {
											"type": "string"
										},
										"name": {
											"type": "string"
										}
									},
									"type": "object"
								}
							},
							"type": "object"
						}
					},
					"runAfter": {},
					"type": "ParseJson"
				},
				"Perform_on_Event_Type": {
					"actions": {
						"Check_If_Sector_Exists": {
							"actions": {
								"Create_Sector_List_Item": {
									"inputs": {
										"body": {
											"body": "{\n\"SectorID\": \"@{body('Parse_Event_Grid_Data_JSON')?['Id']}\",\n\"Title\": \"@{body('Parse_Event_Grid_Data_JSON')?['Value']?['name']}\",\n\"arTitle\": \"@{body('Parse_Event_Grid_Data_JSON')?['LocalizedValues']?['Ar']?['name']}\"\n}",
											"headers": {
												"Accept": "application/json;odata=nometadata",
												"Content-Type": "application/json"
											},
											"method": "POST",
											"uri": "/_api/web/lists/GetByTitle('@{parameters('SectorsList')}')/items"
										},
										"host": {
											"connection": {
												"name": "@parameters('$connections')['apicon-cpp-apps-intspo-pre-we-01']['connectionId']"
											}
										},
										"method": "post",
										"path": "/datasets/@{encodeURIComponent(encodeURIComponent(parameters('GlobalSiteUrl')))}/httprequest"
									},
									"runAfter": {},
									"type": "ApiConnection"
								}
							},
							"else": {
								"actions": {
									"Update_Delete_Sector_List_Item": {
										"inputs": {
											"body": {
												"body": "{\n\"SectorID\": \"@{body('Parse_Event_Grid_Data_JSON')?['Id']}\",\n\"Title\": \"@{body('Parse_Event_Grid_Data_JSON')?['Value']?['name']}\",\n\"arTitle\": \"@{body('Parse_Event_Grid_Data_JSON')?['LocalizedValues']?['Ar']?['name']}\"\n}",
												"headers": {
													"Accept": "application/json;odata=nometadata",
													"Content-Type": "application/json",
													"If-Match": "*",
													"X-HTTP-Method": "@{if(equals(triggerBody()?['eventType'], 'sector-updated'), 'MERGE', 'DELETE')}"
												},
												"method": "POST",
												"uri": "/_api/web/lists/GetByTitle('@{parameters('SectorsList')}')/items(@{first(body('Parse_Sector_List_Item_JSON')?['value'])?['ID']})"
											},
											"host": {
												"connection": {
													"name": "@parameters('$connections')['apicon-cpp-apps-intspo-pre-we-01']['connectionId']"
												}
											},
											"method": "post",
											"path": "/datasets/@{encodeURIComponent(encodeURIComponent(parameters('GlobalSiteUrl')))}/httprequest"
										},
										"runAfter": {},
										"type": "ApiConnection"
									}
								}
							},
							"expression": {
								"and": [
									{
										"equals": [
											"@length(body('Parse_Sector_List_Item_JSON')?['value'])",
											0
										]
									}
								]
							},
							"runAfter": {
								"Parse_Sector_List_Item_JSON": [
									"Succeeded"
								]
							},
							"type": "If"
						},
						"Get_Sector_List_Item": {
							"inputs": {
								"body": {
									"headers": {
										"Accept": "application/json;odata=nometadata",
										"Content-Type": "application/json"
									},
									"method": "GET",
									"uri": "/_api/web/lists/GetByTitle('@{parameters('SectorsList')}')/items?$filter=SectorID eq '@{body('Parse_Event_Grid_Data_JSON')?['Id']}'"
								},
								"host": {
									"connection": {
										"name": "@parameters('$connections')['apicon-cpp-apps-intspo-pre-we-01']['connectionId']"
									}
								},
								"method": "post",
								"path": "/datasets/@{encodeURIComponent(encodeURIComponent(parameters('GlobalSiteUrl')))}/httprequest"
							},
							"runAfter": {},
							"type": "ApiConnection"
						},
						"Parse_Sector_List_Item_JSON": {
							"inputs": {
								"content": "@body('Get_Sector_List_Item')",
								"schema": {
									"properties": {
										"value": {
											"items": {
												"properties": {
													"ID": {
														"type": "integer"
													},
													"SectorID": {
														"type": "string"
													},
													"Title": {
														"type": "string"
													}
												},
												"type": "object"
											},
											"type": "array"
										}
									},
									"type": "object"
								}
							},
							"runAfter": {
								"Get_Sector_List_Item": [
									"Succeeded"
								]
							},
							"type": "ParseJson"
						}
					},
					"expression": {
						"or": [
							{
								"equals": [
									"@triggerBody()?['eventType']",
									"sector-created"
								]
							},
							{
								"equals": [
									"@triggerBody()?['eventType']",
									"sector-updated"
								]
							},
							{
								"equals": [
									"@triggerBody()?['eventType']",
									"sector-deleted"
								]
							}
						]
					},
					"runAfter": {
						"Parse_Event_Grid_Data_JSON": [
							"Succeeded"
						]
					},
					"type": "If"
				}
			}
		},
		"workflowParameters": {
			"value": {
				"$connections": {
					"defaultValue": {},
					"type": "Object"
				},
				"GlobalConfigList": {
					"defaultValue": "Configuration",
					"type": "String"
				},
				"GlobalSiteUrl": {
					"defaultValue": "https://tasmusqcppreprod.sharepoint.com/sites/cms-global",
					"type": "String"
				},
				"SectorsList": {
					"defaultValue": "Sectors",
					"type": "String"
				}
			}
		},
		"diagnosticLogsRetentionInDays": {
			"value": 365
		},
		"diagnosticStorageAccountId": {
			"value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.Storage/storageAccounts/stcppappsdiagprewe01"
		},
		"workspaceId": {
			"value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.OperationalInsights/workspaces/log-cpp-apps-mon-pre-we-01"
		},
		"eventHubAuthorizationRuleId": {
			"value": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-mon-pre-we-01/providers/Microsoft.EventHub/namespaces/evhns-cpp-apps-mon-pre-we-01/authorizationrules/RootManageSharedAccessKey"
		},
		"eventHubName": {
			"value": "evh-cpp-apps-mon-pre-we-01"
		},
		"tags": {
			"value": {
				"Environment": "Pre-Production"
			}
		},
		"connectionParameters": {
			"value": {
				"$connections": {
					"value": {
						"apicon-cpp-apps-integ-pre-we-01": {
							"connectionId": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.Web/connections/apicon-cpp-apps-integ-pre-we-01",
							"connectionName": "apicon-cpp-apps-integ-pre-we-01",
							"id": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/providers/Microsoft.Web/locations/westeurope/managedApis/azureeventgrid"
						},
						"apicon-cpp-apps-intspo-pre-we-01": {
							"connectionId": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/resourceGroups/rg-cpp-apps-int-pre-we-01/providers/Microsoft.Web/connections/apicon-cpp-apps-intspo-pre-we-01",
							"connectionName": "apicon-cpp-apps-intspo-pre-we-01",
							"id": "/subscriptions/8964f3c1-44f5-4094-80eb-4334845bdfb1/providers/Microsoft.Web/locations/westeurope/managedApis/sharepointonline"
						}
					}
				}
			}
		}
	}
}
{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workflowName": {
      "value": "logic-cpd-apps-intfile-dev-we-01"
    },
    "workflowLocation": {
      "value": "westeurope"
    },
    "workflowSchema": {
      "value": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#"
    },
    "workflowTriggers": {
      "value": {
        "When_a_resource_event_occurs": {
          "splitOn": "@triggerBody()",
          "type": "ApiConnectionWebhook",
          "inputs": {
            "body": {
              "properties": {
                "destination": {
                  "endpointType": "webhook",
                  "properties": {
                    "endpointUrl": "@{listCallbackUrl()}"
                  }
                },
                "filter": {
                  "includedEventTypes": [
                    "file-virus-scan-pass",
                    "file-upload-ready"
                  ]
                },
                "topic": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-int-dev-we-01/providers/Microsoft.EventGrid/domains/egd-cpd-apps-int-dev-we-01/topics/coreapi"
              }
            },
            "host": {
              "connection": {
                "name": "@parameters('$connections')['apicon-cpd-apps-integ-dev-we-01']['connectionId']"
              }
            },
            "path": "/subscriptions/@{encodeURIComponent('d0694def-b27e-4bb7-900d-437fbeb802da')}/providers/@{encodeURIComponent('Microsoft.EventGrid.Domains')}/resource/eventSubscriptions",
            "queries": {
              "subscriptionName": "logic-cpd-apps-intfile-dev-we-01-sub",
              "x-ms-api-version": "2017-09-15-preview"
            }
          }
        }
      }
    },
    "workflowActions": {
      "value": {
        "Condition": {
          "actions": {
            "List_records_2": {
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['apicon-cpd-apps-intcds-dev-we-01']['connectionId']"
                  }
                },
                "method": "get",
                "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('tasmu-dev21.crm4'))}/tables/@{encodeURIComponent(encodeURIComponent('annotations'))}/items",
                "queries": {
                  "$filter": "filename eq '@{variables('FilelName')}'",
                  "$top": 1
                }
              },
              "runAfter": {},
              "type": "ApiConnection"
            },
            "Records_count": {
              "actions": {
                "Compose": {
                  "inputs": "@body('Get_blob_content')",
                  "runAfter": {
                    "Get_blob_content": [
                      "Succeeded"
                    ]
                  },
                  "type": "Compose"
                },
                "For_each": {
                  "actions": {
                    "Update_a_record": {
                      "inputs": {
                        "body": {
                          "_objectid_type": "",
                          "_ownerid_type": "",
                          "documentbody": "@{base64(outputs('Compose'))}"
                        },
                        "host": {
                          "connection": {
                            "name": "@parameters('$connections')['apicon-cpd-apps-intcds-dev-we-01']['connectionId']"
                          }
                        },
                        "method": "patch",
                        "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('tasmu-dev21.crm4'))}/tables/@{encodeURIComponent(encodeURIComponent('annotations'))}/items/@{encodeURIComponent(encodeURIComponent(items('For_each')?['annotationid']))}"
                      },
                      "runAfter": {},
                      "type": "ApiConnection"
                    }
                  },
                  "foreach": "@body('List_records_2')?['value']",
                  "runAfter": {
                    "Compose": [
                      "Succeeded"
                    ]
                  },
                  "type": "Foreach"
                },
                "Get_blob_content": {
                  "inputs": {
                    "host": {
                      "connection": {
                        "name": "@parameters('$connections')['apicon-cpd-apps-strst-dev-we-01']['connectionId']"
                      }
                    },
                    "method": "get",
                    "path": "/datasets/default/files/@{encodeURIComponent(encodeURIComponent('/case-files/',variables('FilelName')))}/content",
                    "queries": {
                      "inferContentType": true
                    }
                  },
                  "runAfter": {},
                  "type": "ApiConnection"
                }
              },
              "else": {
                "actions": {
                  "Terminate_update": {
                    "inputs": {
                      "runError": {
                        "code": "404",
                        "message": "No records found in D365 for the file name."
                      },
                      "runStatus": "Failed"
                    },
                    "runAfter": {},
                    "type": "Terminate"
                  }
                }
              },
              "expression": {
                "and": [
                  {
                    "greater": [
                      "@length(body('List_records_2')?['value'])",
                      0
                    ]
                  }
                ]
              },
              "runAfter": {
                "List_records_2": [
                  "Succeeded"
                ]
              },
              "type": "If"
            }
          },
          "else": {
            "actions": {
              "Terminate": {
                "inputs": {
                  "runError": {
                    "code": "404",
                    "message": "File name is required."
                  },
                  "runStatus": "Failed"
                },
                "runAfter": {},
                "type": "Terminate"
              }
            }
          },
          "expression": {
            "and": [
              {
                "not": {
                  "equals": [
                    "@empty(variables('FilelName'))",
                    "@true"
                  ]
                }
              }
            ]
          },
          "runAfter": {
            "File_Variable": [
              "Succeeded"
            ]
          },
          "type": "If"
        },
        "File_Variable": {
          "inputs": {
            "variables": [
              {
                "name": "FilelName",
                "type": "string",
                "value": "@body('Parse_Data')?['filename']"
              }
            ]
          },
          "runAfter": {
            "Parse_Data": [
              "Succeeded"
            ]
          },
          "type": "InitializeVariable"
        },
        "Parse_Data": {
          "inputs": {
            "content": "@triggerBody()?['data']",
            "schema": {
              "properties": {
                "filename": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "isscansucceeded": {
                  "type": "boolean"
                }
              },
              "type": "object"
            }
          },
          "runAfter": {},
          "type": "ParseJson"
        }
      }
    },
    "workflowParameters": {
      "value": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        }
      }
    },
    "diagnosticLogsRetentionInDays": {
      "value": 365
    },
    "diagnosticStorageAccountId": {
      "value": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-mon-dev-we-01/providers/Microsoft.Storage/storageAccounts/stcpdappsdiagdevwe01"
    },
    "workspaceId": {
      "value": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-mon-dev-we-01/providers/Microsoft.OperationalInsights/workspaces/log-cpd-apps-mon-dev-we-01"
    },
    "eventHubAuthorizationRuleId": {
      "value": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-mon-dev-we-01/providers/Microsoft.EventHub/namespaces/evhns-cpd-apps-mon-dev-we-01/authorizationrules/RootManageSharedAccessKey"
    },
    "eventHubName": {
      "value": "evh-cpd-apps-mon-dev-we-01"
    },
    "tags": {
      "value": {
        "Environment": "Development"
      }
    },
    "connectionParameters": {
      "value": {
        "$connections": {
          "value": {
            "apicon-cpd-apps-integ-dev-we-01": {
              "connectionId": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-int-dev-we-01/providers/Microsoft.Web/connections/apicon-cpd-apps-integ-dev-we-01",
              "connectionName": "apicon-cpd-apps-integ-dev-we-01",
              "id": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/providers/Microsoft.Web/locations/westeurope/managedApis/azureeventgrid"
            },
            "apicon-cpd-apps-strst-dev-we-01": {
              "connectionId": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-int-dev-we-01/providers/Microsoft.Web/connections/apicon-cpd-apps-strst-dev-we-01",
              "connectionName": "apicon-cpd-apps-strst-dev-we-01",
              "id": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/providers/Microsoft.Web/locations/westeurope/managedApis/azureblob"
            },
            "apicon-cpd-apps-intcds-dev-we-01": {
              "connectionId": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/resourceGroups/rg-cpd-apps-int-dev-we-01/providers/Microsoft.Web/connections/apicon-cpd-apps-intcds-dev-we-01",
              "connectionName": "apicon-cpd-apps-intcds-dev-we-01",
              "id": "/subscriptions/d0694def-b27e-4bb7-900d-437fbeb802da/providers/Microsoft.Web/locations/westeurope/managedApis/commondataservice"
            }
          }
        }
      }
    }
  }
}
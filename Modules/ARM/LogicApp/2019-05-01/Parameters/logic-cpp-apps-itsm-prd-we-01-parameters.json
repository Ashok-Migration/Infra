                        "GroupName": "Integration"
                      },
                      {
                        "AttributeName": "CRM Case No",
                        "AttributeValue": "@{body('Parse_JSON')?['value']?['caseNumber']}",
                        "GroupName": "Integration"
                      },
                      {
                        "AttributeName": "Category",

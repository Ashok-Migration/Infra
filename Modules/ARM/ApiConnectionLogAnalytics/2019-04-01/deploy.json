{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "connectionName": {
      "type": "String"
    },
    "displayName": {
      "type": "String"
    },
    "apiId": {
      "type": "String"
    },
    "logAnalyticsName": {
      "type": "String"
    },
    "logAnalyticsRG": {
      "type": "String"
    },
    "logAnalyticsAPIVersion": {
      "type": "String"
    },
    "location":{
      "defaultValue": "westeurope",
      "type": "String"
    },
    "tags": {
      "defaultValue": {
      },
      "metadata": {
        "description": "Optional. Resource tags."
      },
      "type": "object"
    }
  },
  "variables": {
    "authRuleResourceId": "[resourceId(subscription().subscriptionId, parameters('logAnalyticsRG'),'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('connectionName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "customParameterValues": {},
        "parameterValues": {
          "workspaceId": "[variables('authRuleResourceId')]",
          "workspaceKey": "[listKeys(variables('authRuleResourceId'), parameters('logAnalyticsAPIVersion')).primarySharedKey]"
        },
        "api": {
          "id": "[parameters('apiId')]"
        }
      }
    }
  ],
  "functions": [],
  "outputs": {}
}
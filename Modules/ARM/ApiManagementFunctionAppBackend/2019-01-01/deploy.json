{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiManagementServiceName": {
      "metadata": {
        "description": "The name of the api management service"
      },
      "type": "string"
    },
    "backendServiceName": {
      "metadata": {
        "description": "The name of the backend function app being added"
      },
      "type": "string"
    },
    "backendServiceRG": {
      "metadata": {
        "description": "The resource group of the backend function app being added"
      },
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[concat(parameters('apiManagementServiceName'),'/',parameters('backendServiceName'))]",
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2019-01-01",
      "properties": {
        "title": "[parameters('backendServiceName')]",
        "description": "[parameters('backendServiceName')]",
        "resourceId": "[concat('https://management.azure.com',resourceId(subscription().subscriptionId,parameters('backendServiceRG'),'/Microsoft.Web/sites/',parameters('backendServiceName'),'manual'))]",
        "url": "[concat('https://',parameters('backendServiceName'),'.azurewebsites.net/api')]",
        "protocol": "http",
        "credentials": {
          "header": {
            "x-functions-key": [ "[listkeys(resourceId(subscription().subscriptionId,parameters('backendServiceRG'),'/Microsoft.Web/sites/functions/',parameters('backendServiceName'),'Notify','manual'),'2019-08-01').default]" ]
          }
        }
      }
    }
  ],
  "functions": [],
  "outputs": {}
}
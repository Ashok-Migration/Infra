{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "defaultValue": "[concat('sql-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Cosmos DB account name, max length 44 characters"
      }
    },
    "containerName": {
      "type": "string",
      "defaultValue": "myContainer",
      "metadata": {
        "description": "The name for the container"
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "myDatabase",
      "metadata": {
        "description": "The name for the database"
      }
    },
    "partitionKey": {
      "type": "string",
      "defaultValue": "/myPartitionKey",
      "metadata": {
        "description": "The container partition key"
      }
    },
    "options": {
      "type": "object",
      "defaultValue": {
        "throughput": {
          "value": 400
        }
      },
      "metadata": {
        "description": "The throughput options"
      }
    },
    "includedPaths": {
      "type": "array",
      "defaultValue": [
        {
          "path": "/*"
        }
      ]
    },
    "uniqueKeys": {
      "type": "array",
      "defaultValue": [
        {
          "paths": [
            "/phoneNumber"
          ]
        }
      ]
    }
  },
  "variables": {
    "accountName": "[toLower(parameters('accountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "name": "[concat(variables('accountName'), '/', parameters('databaseName'), '/', parameters('containerName'))]",
      "apiVersion": "2021-01-15",
      "properties": {
        "resource": {
          "id": "[parameters('containerName')]",
          "partitionKey": {
            "paths": [
              "[parameters('partitionKey')]"
            ],
            "kind": "Hash"
          },
          "indexingPolicy": {
            "indexingMode": "consistent",
            "includedPaths": "[parameters('includedPaths')]",
            "excludedPaths": []
          },
          "defaultTtl": 86400,
          "uniqueKeyPolicy": {
            "uniqueKeys": "[parameters('uniqueKeys')]"
          }
        },
        "options": "[parameters('options')]"
      }
    }
  ],
  "functions": [],
  "outputs": {}
}
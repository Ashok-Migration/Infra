{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventDomainName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Event Grid Domain the subscription is being created for"
            }
        },
        "topicName": {
            "type": "string",
            "metadata": {
                "description": "The topic within the Event Domain for which the subscription needs to be created"
            }
        },
        "eventSubscriptionName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Event subscription."
            }
        },
        "eventDestination": {
            "type": "object",
            "metadata": {
                "description": "The Destination object used to define the subscription endpoint type. More information here: https://docs.microsoft.com/en-us/azure/templates/microsoft.eventgrid/eventsubscriptions#EventSubscriptionDestination"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.EventGrid/domains/providers/eventSubscriptions",
            "name": "[concat(parameters('eventDomainName'), '/', parameters('topicName'), '/Microsoft.EventGrid/', parameters('eventSubscriptionName'))]",
            "apiVersion": "2020-01-01-preview",
            "properties": {
                "destination": "[parameters('eventDestination')]"
            }
        }
    ],
    "outputs": {}
}
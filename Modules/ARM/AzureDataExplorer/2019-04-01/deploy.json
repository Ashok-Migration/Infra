{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string"
    },
    "skuName": {
      "type": "string",
      "defaultValue": "Standard_D13_v2"
    },
    "virtualNetworkResourceGroup": {
      "type": "string"
    },
    "skuTier": {
      "type": "string",
      "defaultValue": "Standard"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "enginePublicIpName": {
      "type": "string",
      "defaultValue": "engine-pip"
    },
    "dataManagementPublicIpName": {
      "type": "string",
      "defaultValue": "dm-pip"
    },
    "publicIpAllocationMethod": {
      "type": "string",
      "defaultValue": "Static"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "tags": {
      "defaultValue": {},
      "metadata": {
        "description": "Optional. Resource tags."
      },
      "type": "object"
    },
    "zones": {
      "type": "Array",
      "metadata": {
        "description": "The availability zones of the Azure Data Explorer Cluster."
      }
    }
  },

    "variables": {
      "vnetId": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
      "subnetId": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets',parameters('virtualNetworkName'),parameters('subnetName'))]",
      "enginePublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('enginePublicIpName'))]",
      "dataManagementPublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('dataManagementPublicIpName'))]"
    },
    "resources": [
      {
        "apiVersion": "2019-07-01",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[parameters('enginePublicIpName')]",
        "sku": {
          "name": "Standard"
        },
        "location": "[parameters('location')]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('publicIpAllocationMethod')]",
          "publicIPAddressVersion": "IPv4"
        }
      },
      {
        "apiVersion": "2019-07-01",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[parameters('dataManagementPublicIpName')]",
        "sku": {
          "name": "Standard"
        },
        "location": "[parameters('location')]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('publicIpAllocationMethod')]",
          "publicIPAddressVersion": "IPv4"
        }
      },
      {
        "type": "Microsoft.Kusto/Clusters",
        "sku": {
          "name": "[parameters('skuName')]",
          "tier": "[parameters('skuTier')]"
        },
        "name": "[parameters('clusterName')]",
        "apiVersion": "2019-05-15",
        "zones": "[parameters('zones')]",
        "dependsOn": [
          "[variables('enginePublicIpId')]",
          "[variables('dataManagementPublicIpId')]"
        ],
        "location": "[parameters('location')]",
        "properties": {
          "virtualNetworkConfiguration": {
            "subnetId": "[variables('subnetId')]",
            "enginePublicIpId": "[variables('enginePublicIpId')]",
            "dataManagementPublicIpId": "[variables('dataManagementPublicIpId')]"
          }
        },
        "tags": "[parameters('tags')]"
      }
    ],
    "functions": [],
    "outputs": {}
  }
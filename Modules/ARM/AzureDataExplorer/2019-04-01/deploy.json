{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "defaultValue": "adx-cpd-data-dev-we-01"
    },
    "skuName": {
      "type": "string",
      "defaultValue": "Standard_D13_v2"
    },
    "skuTier": {
      "type": "string",
      "defaultValue": "Standard"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet-cpd-pltf-dev-we-01"
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "snet-cpd-pltf-daisvc-dev-we-01"
    },
    "enginePublicIpName": {
      "type": "string",
      "defaultValue": "engine-pip"
    },
    "dataManagementPublicIpName": {
      "type": "string",
      "defaultValue": "dm-pip"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "publicIpAllocationMethod": "Static",
    "nsgName": "adxcpddatadevwe01Nsg",
    "nsgId": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
    "subnetId": "IpAdxcpddatadevwe01",
    "enginePublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('enginePublicIpName'))]",
    "dataManagementPublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('dataManagementPublicIpName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('nsgName')]",
      "apiVersion": "2019-07-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowHTTPS",
            "properties": {
              "description": "Allow access using HTTPS",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('enginePublicIpName')]",
      "sku": {
        "name": "Standard"
      },
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIpAllocationMethod')]",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('dataManagementPublicIpName')]",
      "sku": {
        "name": "Basic"
      },
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIpAllocationMethod')]",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "type": "Microsoft.Kusto/Clusters",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "[parameters('skuTier')]"
      },
      "name": "[parameters('clusterName')]",
      "apiVersion": "2019-05-15",
      "dependsOn": [
        "[variables('enginePublicIpId')]",
        "[variables('dataManagementPublicIpId')]",
        "[variables('vnetId')]"
      ],
      "location": "[parameters('location')]",
      "properties": {
        "virtualNetworkConfiguration": {
          "subnetId": "[variables('subnetId')]",
          "enginePublicIpId": "[variables('enginePublicIpId')]",
          "dataManagementPublicIpId": "[variables('dataManagementPublicIpId')]"
        }
      }
    }
  ],
  "functions": [],
   "outputs": {}
}
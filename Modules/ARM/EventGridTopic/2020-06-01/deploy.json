{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "systemTopics_device_availability_analysis_name": {
      "type": "String"
    },
    "IotHubs_externalid": {
      "type": "String"
    },
    "namespaces_evh_externalid": {
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.EventGrid/systemTopics",
      "apiVersion": "2020-04-01-preview",
      "name": "[parameters('systemTopics_device_availability_analysis_name')]",
      "location": "westeurope",
      "tags": {
        "Workstream": "Data"
      },
      "properties": {
        "source": "[parameters('IotHubs_externalid')]",
        "topicType": "Microsoft.Devices.IoTHubs"
      }
    },
    {
      "type": "Microsoft.EventGrid/systemTopics/eventSubscriptions",
      "apiVersion": "2020-04-01-preview",
      "name": "[concat(parameters('systemTopics_device_availability_analysis_name'), '/devavailabilityeh')]",
      "dependsOn": [
        "[resourceId('Microsoft.EventGrid/systemTopics', parameters('systemTopics_device_availability_analysis_name'))]"
      ],
      "properties": {
        "destination": {
          "properties": {
            "resourceId": "[concat(parameters('namespaces_evh_externalid'), '/eventhubs/sp-deviceavailability-dev')]"
          },
          "endpointType": "EventHub"
        },
        "filter": {
          "includedEventTypes": [
            "Microsoft.Devices.DeviceConnected",
            "Microsoft.Devices.DeviceDisconnected"
          ]
        },
        "labels": [],
        "eventDeliverySchema": "EventGridSchema",
        "retryPolicy": {
          "maxDeliveryAttempts": 30,
          "eventTimeToLiveInMinutes": 1440
        }
      }
    }
  ],
  "functions": [],
  "outputs": {}
}
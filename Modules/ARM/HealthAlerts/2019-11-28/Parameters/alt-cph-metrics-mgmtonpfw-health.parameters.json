{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "value": "alt-cph-mgmt-metrics-onpfw-prd-qc-01"
        },
        "alertDescription": {
            "value": "MGMT-FirewallHealth is Greater than or Equal to 1"
        },
        "scopes": {
            "value": [
                "/subscriptions/4e865dba-bf2f-463a-a957-c69f5fb32ec5/resourceGroups/rg-cph-mgmt-net-prd-qc-01/providers/Microsoft.Network/azureFirewalls/azfw-cph-mgmt-onpfw-prd-qc-01"
            ]
        },
        "windowSize": {
            "value": "PT5M"
        },
        "severity": {
            "value": "0"
        },
        "actions": {
            "value": [{
                "actionGroupId": "/subscriptions/4e865dba-bf2f-463a-a957-c69f5fb32ec5/resourceGroups/rg-tasmu-health/providers/microsoft.insights/actionGroups/ag-tasmu-health"
            }]
        },
        "targetResourceType": {
            "value": "Microsoft.Network/azureFirewalls"
        },
        "targetResourceRegion": {
            "value": "qatarcentral"
        },
        "criterias": {
            "value": [{
                            "threshold": 1,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.Network/azureFirewalls",
                            "metricName": "FirewallHealth",
                            "dimensions": [
                                {
                                    "name": "Status",
                                    "operator": "Exclude",
                                    "values": [
                                        "Healthy"
                                    ]
                                }
                            ],
                            "operator": "GreaterThanOrEqual",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
            }]
        },
        "alertCriteriaType": {
            "value": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
        }

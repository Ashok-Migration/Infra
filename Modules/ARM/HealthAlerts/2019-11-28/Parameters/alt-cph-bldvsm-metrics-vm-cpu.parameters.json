{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "value": "alt-cph-bldvsm-metrics-vm-percentage-cpu-prd-qc-01"
        },
        "alertDescription": {
            "value": "PLTF-Percentage CPU is Greater than 90"
        },
        "scopes": {
            "value": [

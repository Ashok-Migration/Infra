{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "botId": {
      "type": "String"
    },
    "botWebappName": {
      "type": "String"
    },
    "appInsightsName": {
      "type": "String"
    },
    "sku": {
      "type": "String"
    },
    "appId": {
      "defaultValue": "1234",
      "type": "String"
    },
    "tags": {
      "defaultValue": {},
      "metadata": {
        "description": "Optional. Resource tags."
      },
      "type": "object"
    }
  },
    "variables": {
        "appInsightsResourceId": "[resourceId(resourceGroup().name, 'microsoft.insights/components',parameters('appInsightsName'))]",
        "endpointvalue": "[resourceId(resourceGroup().name, 'Microsoft.Web/sites',parameters('botWebappName'))]"
    },
  "resources": [    
    {
      "comments": "bot service",
      "type": "Microsoft.BotService/botServices",
      "kind": "sdk",
      "apiVersion": "2018-07-12",
      "name": "[parameters('botId')]",
      "location": "global",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "properties": {
        "displayName": "[parameters('botId')]",
        "msaAppId": "[parameters('appId')]",
        "isStreamingSupported": true,
        "endpoint": "[concat('https://', reference(variables('endpointvalue'), '2018-11-01').hostNames[0], '/api/messages')]",
        "developerAppInsightKey": "[reference(variables('appInsightsResourceId'), '2015-05-01').InstrumentationKey]",
        "developerAppInsightsApplicationId": "[reference(variables('appInsightsResourceId'), '2015-05-01').ApplicationId]"
      },
    "tags": "[parameters('tags')]"
    }
  ],
  "functions": [],
  "outputs": {
  }
}
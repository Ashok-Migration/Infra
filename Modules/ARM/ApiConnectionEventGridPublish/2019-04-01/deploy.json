{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "connectionName": {
      "type": "String"
    },
    "displayName": {
      "type": "String"
    },
    "apiId": {
      "type": "String"
    },
    "eventGridEndpoint": {
      "type": "String"
    },
    "eventGridName": {
      "type": "String"
    },
    "eventGridRG": {
      "type": "String"
    },
    "eventGridResourceType": {
      "defaultValue": "Microsoft.EventGrid/domains",
      "type": "String"
    },
    "eventGridAPIVersion":{
      "defaultValue": "2020-06-01",
      "type": "String"
    },
    "location":{
      "defaultValue": "westeurope",
      "type": "String"
    },
    "tags": {
      "defaultValue": {
      },
      "metadata": {
        "description": "Optional. Resource tags."
      },
      "type": "object"
    }
  },
  "variables": {
    "resourceId": "[resourceId(subscription().subscriptionId,parameters('eventGridRG'),parameters('eventGridResourceType'),parameters('eventGridName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('connectionName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "parameterValues": {
          "endpoint": "[parameters('eventGridEndpoint')]",
          "api_key": "[listkeys(variables('resourceId'), parameters('eventGridAPIVersion')).key1]"
        },
        "customParameterValues": {},
        "api": {
          "id": "[parameters('apiId')]"
        }
      }
    }
  ],
  "functions": [],
  "outputs": {}
}
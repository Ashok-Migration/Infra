{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "connection_name": {
      "type": "String"
    },
    "display_name": {
      "type": "String"
    },
    "api_id": {
      "type": "String"
    },
    "CognitiveServiceName": {
      "type": "String"
    },
    "CognitiveServiceRG": {
      "type": "String"
    },
    "CognitiveServiceAPIVersion": {
      "type": "String"
    },
    "tags": {
      "defaultValue": {
      },
      "metadata": {
        "description": "Optional. Resource tags."
      },
      "type": "object"
    }
  },
  "variables": {
    "resourceId": "[resourceId(subscription().subscriptionId, parameters('CognitiveServiceRG'), 'Microsoft.CognitiveServices/accounts', parameters('CognitiveServiceName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('connection_name')]",
      "location": "westeurope",
      "tags": "[parameters('tags')]",
      "properties": {
        "displayName": "[parameters('display_name')]",
        "parameterValues": {
          "userProvidedKey": "[listKeys(variables('resourceId'), parameters('CognitiveServiceAPIVersion')).key1]"
        },
        "customParameterValues": {},
        "api": {
          "id": "[parameters('api_id')]"
        }
      }
    }
  ],
  "functions": [],
  "outputs": {}
}